<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.board.mapper.BoardMapper">

    <!-- board List   -->
    <select id="selectList" resultType="boardVO">
        SELECT * FROM board ORDER BY seq DESC
    </select>

    <!-- board Detail   -->
    <select id="selectOne" resultType="boardVO">
        SELECT * FROM board WHERE seq = #{seq}
    </select>

    <!-- board reply join -->
    <select id="selectReplyList" resultType="boardReplyVO">
        SELECT R.idx, R.reply
            FROM board_reply R, board B
            WHERE R.seq = B.seq
            AND R.seq = #{seq}
            ORDER BY R.idx DESC
    </select>

    <!-- board Insert   -->
    <insert id="insert">
        INSERT INTO board (id, title, content, regdate) VALUES(
        #{id},
        #{title},
        #{content},
        NOW()
        )
    </insert>

    <!-- board reply insert -->
    <insert id="insertReply">
        INSERT INTO board_reply (seq, reply) VALUES(#{seq}, #{reply})
    </insert>

    <!-- board Update   -->
    <update id="update">
        UPDATE board SET
        title = #{title},
        content = #{content},
        regdate = NOW()
        WHERE seq = #{seq}
    </update>

    <!-- board Delete  -->
    <delete id="delete" parameterType="int">
        DELETE FROM board WHERE seq = #{seq}
    </delete>
</mapper>