<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.board.mapper.LogMapper">

    <resultMap id="log" type="log">
        <result column="idx" property="idx"/>
        <result column="log_message" property="logMessage"/>
    </resultMap>

    <select id="selectList" resultMap="log">
        SELECT * FROM log
    </select>

    <insert id="insertLog" >
        INSERT INTO log (log_message) VALUES(#{logMessage})
    </insert>
</mapper>